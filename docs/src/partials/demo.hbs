<section class="c-demo" id="{{ id }}">

    {{!-- Heading and intro --}}
    <div class="l-container">
        <h2 class="heading heading--size-small c-demo__heading">{{ heading }}</h2>
        <div class="c-demo__intro">
            {{{ intro }}}
        </div>
        <h3 class="c-demo__heading-sub">Example</h3>
    </div>
    {{!-- //Heading and intro --}}

    {{!-- Example incl. markup --}}
    <div class="c-demo__example">
        {{> (lookup . 'markup') }}
    </div>
    <div class="c-demo__code">
{{#markdown}}
```handlebars
{{> (lookup . 'markup') }}
```
{{/markdown}}
    </div>
    {{!-- //Example incl. markup --}}

    {{!-- View source code link --}}
    <div class="c-demo__view-source-code">
        <a href="{{ source-code-url }}" class="c-demo__view-source-code-link" target="_blank">
            <svg class="c-demo__view-source-code-icon">
                <use xlink:href="#github-icon" />
            </svg>
            <span class="c-demo__view-source-code-link-text">View source code</span>
        </a>
    </div>
    {{!-- //View source code link --}}

</section>
