<section class="🐌-c-test-case">

    {{!-- Header --}}
    <header class="🐌-c-test-case__header">
        <div class="l-container">
            <h1 class="🐌-c-test-case__title"><a href="{{ docs-url }}" title="→ Read more about {{ name }} in the docs"><strong>{{ name }}</strong></a> tests</h1>
            <p class="🐌-c-test-case__header-block">All associated settings in <strong class="🐌-c-file-path">assets/scss/_settings.scss → {{ settings-location }}</strong></p>
        </div>
    </header>
    {{!-- //Header --}}

    {{!-- Loop through each top-level test --}}
    {{#each test-case}}
        <div class="🐌-c-test-case__inner">

            <div class="l-container">

                {{!-- The selector --}}
                <div class="🐌-c-test-case__selector 🐌-c-test-case__block">
                    <h2>
                        <code class="🐌-b-code">{{ this.selector }}</code>
                    </h2>
                </div>
                {{!-- //The selector --}}

                {{!-- The description --}}
                <div class="🐌-c-test-case__test-desc 🐌-c-test-case__block">
                    <p>{{{ this.description }}}</p>
                </div>
                {{!-- //The description --}}

            </div>

            {{!-- Run the test --}}
            <div class="🐌-c-test-case__test-run">
                {{{ this.run }}}
            </div>
            {{!-- //Run the test --}}

            {{!-- Test legend --}}
            {{> test-case-legend}}
            {{!-- //Test legend --}}

        </div>
    {{/each}}
    {{!-- //Loop through each top-level test --}}

</section>
